<Window x:Class="styles2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:styles2"
        mc:Ignorable="d"
        Background="{DynamicResource Primary}"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Выберите тему" Grid.ColumnSpan="2" Foreground="{DynamicResource Third}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" FontFamily="Bahnschrift SemiBold"/>
        <Button Content="BLM(black's lifes matter" Background="{DynamicResource Secondary}" Click="Button_Click" Grid.Row="1" MinHeight="40" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Bahnschrift SemiBold" />
        <Button Content="WPB(White peoples better)" Background="{DynamicResource Secondary}" Click="Button_Click_1" Grid.Row="1" Grid.Column="1" MinHeight="40"  VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Bahnschrift SemiBold"/>


    </Grid>
</Window>
